# SquidJob Tender Management System
# Production Environment Configuration

# Application Settings
APP_NAME="SquidJob Tender Management System"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Calcutta

# Database Configuration (Production MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=squidjob_prod
DB_USERNAME=squidjob_user
DB_PASSWORD=your-secure-production-password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=1440
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com

# Security Settings (CHANGE THESE IN PRODUCTION)
APP_KEY=base64:YourSecureProductionKeyHere123456789012345678901234567890
JWT_SECRET=your-secure-jwt-secret-key-for-production
BCRYPT_ROUNDS=12

# File Upload Settings
UPLOAD_MAX_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,zip

# Email Configuration (Production SMTP)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-production-email@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="SquidJob System"

# Logging
LOG_CHANNEL=file
LOG_LEVEL=error
LOG_PATH=storage/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=squidjob_prod

# Production Optimizations
ENABLE_QUERY_LOG=false
ENABLE_PROFILING=false
CACHE_VIEWS=true
OPTIMIZE_AUTOLOADER=true
ENABLE_WHOOPS=false
SHOW_DEBUG_BAR=false

# Third-party API Keys (Production)
OPENAI_API_KEY=your-production-openai-key
ANTHROPIC_API_KEY=your-production-anthropic-key

# SMS Configuration (Production)
SMS_PROVIDER=twilio
TWILIO_SID=your-production-twilio-sid
TWILIO_TOKEN=your-production-twilio-token
TWILIO_FROM=your-twilio-phone-number

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=storage/backups
BACKUP_RETENTION_DAYS=30

# Performance Settings
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300
MAX_INPUT_TIME=300

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=true

# Monitoring
ENABLE_ERROR_TRACKING=true
ERROR_TRACKING_DSN=your-error-tracking-dsn

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15