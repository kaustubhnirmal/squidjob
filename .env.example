# SquidJob Tender Management System
# Environment Configuration Template

# Application Settings
APP_NAME="SquidJob Tender Management System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/squidjob
APP_TIMEZONE=Asia/Calcutta

# Database Configuration (XAMPP MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=squidjob
DB_USERNAME=squidj0b
DB_PASSWORD=A1b2c3d4
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=1440
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Security Settings
APP_KEY=base64:your-32-character-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
BCRYPT_ROUNDS=12

# File Upload Settings
UPLOAD_MAX_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,zip

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@squidjob.com
MAIL_FROM_NAME="SquidJob System"

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=storage/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=squidjob

# Third-party API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# SMS Configuration (Optional)
SMS_PROVIDER=twilio
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=your-twilio-number

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=storage/backups
BACKUP_RETENTION_DAYS=30

# Performance Settings
ENABLE_QUERY_LOG=false
ENABLE_PROFILING=false
CACHE_VIEWS=false
OPTIMIZE_AUTOLOADER=true

# Development Tools
ENABLE_WHOOPS=true
SHOW_DEBUG_BAR=false