# Production Environment Configuration
# Tender Management System - Production Settings

# Environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
# PostgreSQL (Primary)
DATABASE_URL=postgresql://username:password@localhost:5432/tender247_db
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_TIMEOUT=30000

# MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/tender247_db

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-super-secure-session-secret-key-min-32-chars
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/opt/tender247/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Email Configuration (SMTP)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Tender247 System

# Application URLs
BASE_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api
FRONTEND_URL=https://yourdomain.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=tender247:
REDIS_TTL=3600

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=/var/log/tender247/app.log
ACCESS_LOG=/var/log/tender247/access.log

# Performance Settings
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=300

# AI/ML Services (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring and Analytics
MONITORING_ENABLED=true
ANALYTICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key

# Error Reporting
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_DOCUMENT_PROCESSING=true
FEATURE_EMAIL_NOTIFICATIONS=true