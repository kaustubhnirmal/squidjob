# Development Environment Configuration
# Tender Management System - Development Settings

# Environment
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Debug Settings
DEBUG=tender247:*
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/tender247_dev
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_TIMEOUT=10000

# Security Configuration (Development)
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=24h
SESSION_SECRET=dev-session-secret-key-for-development
BCRYPT_ROUNDS=8

# CORS Configuration (Development)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting (Disabled in Development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Email Configuration (Development - Console Output)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
FROM_EMAIL=dev@tender247.local
FROM_NAME=Tender247 Development

# Application URLs
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:3000

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=tender247:dev:

# Performance Settings (Development)
COMPRESSION_ENABLED=false
CACHE_ENABLED=false
CACHE_TTL=60

# AI/ML Services (Development)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring (Disabled in Development)
MONITORING_ENABLED=false
ANALYTICS_ENABLED=false

# Feature Flags (All Enabled in Development)
FEATURE_AI_ANALYSIS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_DOCUMENT_PROCESSING=true
FEATURE_EMAIL_NOTIFICATIONS=true

# Development Tools
HOT_RELOAD=true
AUTO_RESTART=true
WATCH_FILES=true