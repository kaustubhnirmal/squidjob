# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
# For PostgreSQL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/tender247_db

# For MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/tender247_db

# Security Keys (IMPORTANT: Generate new keys for production)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
SESSION_SECRET=your-super-secure-session-secret-key-at-least-32-characters
BCRYPT_ROUNDS=12

# Application URLs
BASE_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api
FRONTEND_URL=https://yourdomain.com

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/path/to/your/uploads/directory
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Email Configuration (SMTP)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Tender247 System

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Settings
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=300

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/tender247/app.log

# Optional: AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Redis (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=tender247:

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_SEARCH=true