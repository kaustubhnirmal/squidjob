{
    "name": "squidjob/tender-management-system",
    "description": "SquidJob Tender Management System - PHP + MySQL + Apache",
    "type": "project",
    "keywords": [
        "tender-management",
        "php",
        "mysql",
        "apache",
        "xampp",
        "business-application"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "SquidJob Team",
            "email": "admin@squidjob.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-curl": "*",
        "monolog/monolog": "^3.0",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "intervention/image": "^2.7",
        "league/csv": "^9.10",
        "phpoffice/phpspreadsheet": "^1.29",
        "dompdf/dompdf": "^2.0",
        "tecnickcom/tcpdf": "^6.6",
        "respect/validation": "^2.2",
        "twig/twig": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.22"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        },
        "files": [
            "app/helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 app/",
        "cs-fix": "phpcbf --standard=PSR12 app/",
        "stan": "phpstan analyse app/ --level=8",
        "post-install-cmd": [
            "@php scripts/post-install.php"
        ],
        "post-update-cmd": [
            "@php scripts/post-install.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}